{
  "name": "chess-analysis-worker",
  "version": "0.0.2",
  "description": "Free online chess analysis worker",
  "author": "Pavol Bincik",
  "license": "MIT",
  "homepage": "https://github.com/oaki/chess-analysis-worker",
  "scripts": {
    "worker:start": "node src/socketWorker.js",
    "worker:start:dev": "node -r dotenv/config src/socketWorker.js dotenv_config_path=./.env-dev",
    "git:update": "git pull",
    "test": "git pull",
    "stockfish:download": "rm -rf Stockfish && git clone https://github.com/official-stockfish/Stockfish.git",
    "stockfish:make": "cd ./Stockfish/src/; make build ARCH=x86-64",
    "stockfish:copy": "cp ./Stockfish/src/stockfish ./src/",
    "stockfish:install": "npm run stockfish:download && npm run stockfish:make && npm run stockfish:copy"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "lodash": "^4.17.4",
    "socket.io-client": "^2.2.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1"
  }
}
